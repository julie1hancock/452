<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="bordered">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="borderedText" parent="text">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="text" parent="wrap">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16dp</item>
    </style>




    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="wrappedBordered" parent="bordered">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>







    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--    1 usage-->
    <style name="toggleRightLayout" parent="bordered">
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--    1 usage-->
    <style name="toggleLayout" parent="bordered">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="switchValue">
        <item name="android:layout_column">1</item>
        <item name="android:checked">false</item>
        <item name="android:thumbTint">@drawable/switch_tint</item>
        <item name="android:trackTint" tools:targetApi="m">@drawable/switch_track</item>
    </style>

    <style name="toggleLine">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="nextArrow">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@drawable/ic_next_arrow_foreground</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:tint">@color/white</item>
    </style>





    <style name="topGap" parent="wrap">
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="nextLayout" parent="wrap">
        <item name="android:padding">24dp</item>
    </style>

    <style name="gridLayout" parent="wrap">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:columnCount">2</item>
    </style>

    <style name="borderedLayout" parent="wrappedBordered">
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>


<!--    1 usage-->
    <style name="compTopBlock" parent="wrappedBordered">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">16dp</item>
    </style>



    <style name="toolbarText" parent="text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="nextText" parent="text">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="optionalText" parent="text">
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
    </style>

    <style name="leftLabel" parent="text">
        <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_column">0</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="toggleButton" parent="text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/not_selected</item>
    </style>

    <style name="editTextValue" parent="text">
        <item name="android:layout_width">224dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_column">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/selected</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

<!--    1 usage-->
    <style name="instructionText" parent="text">
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--    1 usage-->
    <style name="compTopText" parent="text">
        <item name="android:textSize">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    1 usage-->
    <style name="bigBottomText" parent="text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="button" parent="text">
        <item name="android:textSize">12dp</item>
        <item name="android:text">@string/click_to_skip</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

<!--    1 usage-->
    <style name="bigButton" parent="button">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>




</resources>
