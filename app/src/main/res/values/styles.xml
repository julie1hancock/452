    <style name="toggleButton" parent="simpleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/not_selected</item>
    </style>

    <style name="toggleLine">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/black</item>
    </style>


    <style name="nextArrow">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@drawable/ic_next_arrow_foreground</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:tint">@color/white</item>
    </style>
